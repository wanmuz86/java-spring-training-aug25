package com.example.helloworld;

public class IfElseDemo {

	public static void main(String[] args) {
		System.out.println("Positive - Negative Demo");
		int num = 13;
		
		if (num > 0) {
			System.out.println("Number is positive");
		}
		else if (num < 0) {
			System.out.println("Number is negative");
		}
		else {
			System.out.println("Number is zero");
		}
		
		System.out.println("Fantastic Four admittance checker");
		
		int age = 19;
		/*
		 *  < smaller than
		 *  >  greater than
		 *  <= smaller or equal
		 *  >= greater or equal
		 *   ==  equals to
		 */
		if (age <= 12) {
			System.out.println("You cannot watch the movie");
		}
		else if (age <= 18) {
			System.out.println("You can watch the movie with parent");
		} else {
			System.out.println("You can watch the movie");
		}
		
		System.out.println("Fantastic Four advanced admittance checker");
		
		boolean withParent = false;
		
		// Condition of rejection
		// || OR = One of the conditions needs to be true
		// && AND = Both of the conditions needs to be true
		// ! = The reverse of -> true => false, false -> true
		// withParent == false is the same as !withParent
		
		if (age <= 12 || (age <=18 && !withParent )) {
			System.out.println("You cannot watch the movie");
		}
		else {
			System.out.println("You can watch the movie");
		}
		
		

	}

}
